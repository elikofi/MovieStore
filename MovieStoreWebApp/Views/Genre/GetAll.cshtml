@model IEnumerable<MovieStoreWebApp.Models.Domain.Genre>
@{
}

<div class="container">
    <a href="/Genre/Add" class="btn btn-outline-warning">Add more genres </a>
</div>

<div class="container pt-10">
    <div>
        <h2>Movie Genres</h2>
        <table class="table table-stripped table-bordered">
            <thead>
                <tr>
                    <th>Name</th>
                    <th>Action</th>
                </tr>
            </thead>
            <tbody>
                @foreach (var item in Model)
                {
                    <tr>
                        <td>@item.GenreName</td>
                        <td>
                            <a class="btn btn-outline-primary" href="/Genre/Update?id=@item.Id">Edit</a>
                            <a class="btn btn-outline-danger" onclick="return window.confirm('Are you sure')" href="/Genre/Delete?id=@item.Id">Delete</a>
                        </td>
                    </tr>
                }
            </tbody>
        </table>
    </div>
</div>
