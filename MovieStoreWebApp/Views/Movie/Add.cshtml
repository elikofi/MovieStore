@model MovieStoreWebApp.Models.Domain.Movie
@{
}


<div class="container pt-10">
    <div>
        <h2>Add Movie</h2>
        <form asp-action="Add" method="post">
            <div class="form-group">
                <label asp-for="Title">Title:</label>
                <input type="text" class="form-control" asp-for="Title" />
                <span asp-validation-for="Title" class="text-danger"></span>
            </div>

            <div class="form-group">
                <label asp-for="TotalMinutes">Total Minutes:</label>
                <input type="number" class="form-control" asp-for="TotalMinutes" />
                <span asp-validation-for="TotalMinutes" class="text-danger"></span>
            </div>

            <div class="form-group">
                <label asp-for="GenreId">Genre:</label>
                <select asp-for="GenreId" asp-items="Model.GenreList" class="form-control">
                    <option value="">--select--</option>
                </select>
                <span asp-validation-for="GenreId" class="text-danger"></span>
            </div>

            <div class="form-group">
                <label asp-for="ProductionId">Production:</label>
                <select asp-for="ProductionId" asp-items="Model.ProductionList" class="form-control">
                    <option value="">--select--</option>
                </select>
                <span asp-validation-for="ProductionId" class="text-danger"></span>
            </div>

            <div class="form-group">
                <label asp-for="DirectorId">Director:</label>
                <select asp-for="DirectorId" asp-items="Model.DirectorList" class="form-control">
                    <option value="">--select--</option>
                </select>
                <span asp-validation-for="DirectorId" class="text-danger"></span>
            </div>

            @if (TempData["msg"] != null)
            {
                <div class="form-group">
                    @TempData["msg"]
                </div>
            }
            <div class="form-group pt-3">
                <button type="submit" class="btn btn-outline-success">Save</button>
                <a href="/Movie/GetAll" class="btn btn-outline-info">List</a>
            </div>
        </form>
    </div>
</div>
