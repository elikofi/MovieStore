@model MovieStoreWebApp.Models.Domain.Production
@{
}


<div class="container pt-10">
    <div>
        <h2>Add Movie Production</h2>
        <form asp-action="Update" method="post">
            <input type="hidden" asp-for="Id" />
            <div class="form-group">
                <label asp-for="ProductionName">Production Name:</label>
                <input type="text" class="form-control" asp-for="ProductionName" />
                <span asp-validation-for="ProductionName" class="text-danger"></span>
            </div>

            @if (TempData["msg"] != null)
            {
                <div class="form-group">
                    @TempData["msg"]
                </div>
            }
            <div class="form-group pt-3">
                <button type="submit" class="btn btn-outline-success">Save</button>
                <a href="/Production/GetAll" class="btn btn-outline-info">List</a>
            </div>
        </form>
    </div>
</div>
