@model MovieStoreWebApp.Models.Domain.Director
@{
}


<div class="container pt-10">
    <div>
        <h2>Add Movie Director</h2>
        <form asp-action="Add" method="post">
            <div class="form-group">
                <label asp-for="DirectorName">Director Name:</label>
                <input type="text" class="form-control" asp-for="DirectorName" />
                <span asp-validation-for="DirectorName" class="text-danger"></span>
            </div>

            @if (TempData["msg"] != null)
            {
                <div class="form-group">
                    @TempData["msg"]
                </div>
            }
            <div class="form-group pt-3">
                <button type="submit" class="btn btn-outline-success">Save</button>
                <a href="/Director/GetAll" class="btn btn-outline-info">List</a>
            </div>
        </form>
    </div>
</div>
